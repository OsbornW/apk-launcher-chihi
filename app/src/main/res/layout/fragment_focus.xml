<?xml version="1.0" encoding="utf-8"?>
<layout>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/qb_px_46"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@drawable/baseline_filter_center_focus_300"
            android:layout_width="@dimen/qb_px_300"
            android:layout_height="@dimen/qb_px_300"/>
        <TextView
            android:id="@+id/tv_tip"
            android:text="@string/focus_guide"
            android:textSize="@dimen/qb_px_sp_22"
            android:textColor="@color/text_color_style_1"
            android:layout_marginTop="@dimen/qb_px_26"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:id="@+id/tv_next"
        android:layout_marginBottom="@dimen/qb_px_26"
        android:textSize="@dimen/qb_px_sp_18"
        android:textColor="@color/text_color_style_1"
        android:layout_gravity="center_horizontal|bottom"
        android:text="@string/next"
        android:textStyle="bold"
        android:gravity="center"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/ripple_style_3"
        android:layout_width="@dimen/qb_px_150"
        android:layout_height="@dimen/qb_px_45"/>
</FrameLayout>
</layout>