<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/wallpaper"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToOutline="false"
        android:clipChildren="false"
        android:clipToPadding="false">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:clipToOutline="false"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:elevation="0dp"
            app:expanded="true">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:clipToOutline="false"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_main_toolbar_height"
                android:background="@android:color/transparent"
                app:layout_scrollFlags="exitUntilCollapsed|scroll">
                <androidx.appcompat.widget.Toolbar
                    android:layout_marginTop="@dimen/fragment_main_header_margin_top"
                    android:alpha="0"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    android:background="@android:color/transparent"
                    app:layout_collapseMode="parallax"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/until_collapsed_height"/>
                <androidx.leanback.widget.HorizontalGridView
                    android:id="@+id/header"
                    app:layout_collapseMode="parallax"
                    android:clipToOutline="false"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    app:focusOutFront="true"
                    app:focusOutEnd="true"
                    android:paddingTop="@dimen/fragment_main_header_padding_top"
                    android:paddingBottom="@dimen/fragment_main_header_padding_bottom"
                    android:layout_marginTop="@dimen/fragment_main_header_margin_top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <FrameLayout
                    android:id="@+id/div_toolbar"
                    android:layout_marginLeft="@dimen/fragment_main_opt_margin_left"
                    android:layout_marginRight="@dimen/fragment_main_opt_margin_right"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fragment_main_opt_height"
                    app:layout_collapseMode="pin">
                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/loop_time"
                                android:text="08 : 08"
                                android:textSize="@dimen/fragment_main_opt_time_text_size"
                                android:textColor="@color/text_color_style_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/loop_segment"
                                android:text="AM"
                                android:textSize="@dimen/fragment_main_opt_segment_test_size"
                                android:textColor="@color/text_color_style_1"
                                android:layout_marginLeft="@dimen/fragment_main_opt_segment_margin_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <View
                            android:layout_marginLeft="@dimen/fragment_main_opt_cut_margin_left"
                            android:layout_marginRight="@dimen/fragment_main_opt_cut_margin_right"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/rect_solid_8dp_1"
                            android:layout_width="@dimen/fragment_main_opt_cut_width"
                            android:layout_height="@dimen/fragment_main_opt_cut_height"/>
                        <com.soya.launcher.view.KeyView
                            android:id="@+id/setting"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:foreground="@drawable/ripple_style_1"
                            android:src="@drawable/baseline_settings_100"
                            android:layout_marginLeft="@dimen/fragment_main_opt_icon_margin_left"
                            android:padding="@dimen/fragment_main_opt_icon_padding"
                            android:layout_width="@dimen/fragment_main_opt_icon_width"
                            android:layout_height="@dimen/fragment_main_opt_icon_height"/>
                        <ImageView
                            android:id="@+id/weather"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:foreground="@drawable/ripple_style_1"
                            android:src="@drawable/baseline_wb_cloudy_100"
                            android:layout_marginLeft="@dimen/fragment_main_opt_icon_margin_left"
                            android:padding="@dimen/fragment_main_opt_icon_padding"
                            android:layout_width="@dimen/fragment_main_opt_icon_width"
                            android:layout_height="@dimen/fragment_main_opt_icon_height"/>
                        <ImageView
                            android:id="@+id/login"
                            android:visibility="gone"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:foreground="@drawable/ripple_style_1"
                            android:src="@drawable/baseline_logout_100"
                            android:layout_marginLeft="@dimen/fragment_main_opt_icon_margin_left"
                            android:padding="@dimen/fragment_main_opt_icon_padding"
                            android:layout_width="@dimen/fragment_main_opt_icon_width"
                            android:layout_height="@dimen/fragment_main_opt_icon_height"/>
                        <ImageView
                            android:id="@+id/help"
                            android:visibility="gone"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:foreground="@drawable/ripple_style_1"
                            android:src="@drawable/baseline_help_100"
                            android:layout_marginLeft="@dimen/fragment_main_opt_icon_margin_left"
                            android:padding="@dimen/fragment_main_opt_icon_padding"
                            android:layout_width="@dimen/fragment_main_opt_icon_width"
                            android:layout_height="@dimen/fragment_main_opt_icon_height"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/test"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:textColor="@color/text_color_style_1"
                        android:textSize="@dimen/fragment_main_opt_segment_test_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/notify_recycler"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:paddingLeft="@dimen/fragment_main_div_search_padding_left"
                        android:paddingRight="@dimen/fragment_main_div_search_padding_right"
                        android:layout_gravity="right|center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/search"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:paddingLeft="@dimen/fragment_main_opt_search_padding_left"
                            android:paddingRight="@dimen/fragment_main_opt_search_padding_right"
                            android:layout_marginRight="@dimen/fragment_main_opt_search_margin_right"
                            android:layout_gravity="center_vertical"
                            android:foreground="@drawable/ripple_style_4"
                            android:background="@drawable/menu_item_4"
                            android:orientation="horizontal"
                            android:layout_width="@dimen/fragment_main_opt_search_width"
                            android:layout_height="@dimen/fragment_main_opt_search_height">
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/baseline_search_100"
                                android:layout_width="@dimen/fragment_main_opt_search_icon_width"
                                android:layout_height="@dimen/fragment_main_opt_search_icon_height"/>
                            <TextView
                                android:textSize="@dimen/fragment_main_opt_search_text_size"
                                android:layout_marginLeft="@dimen/fragment_main_opt_search_text_margin_left"
                                android:layout_gravity="center_vertical"
                                android:text="@string/search"
                                android:textColor="@color/text_color_style_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/wifi"
                            android:layout_gravity="center_vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:foreground="@drawable/ripple_style_1"
                            android:src="@drawable/baseline_wifi_100"
                            android:layout_marginLeft="@dimen/fragment_main_opt_icon_margin_left"
                            android:padding="@dimen/fragment_main_opt_icon_padding"
                            android:layout_width="@dimen/fragment_main_opt_icon_width"
                            android:layout_height="@dimen/fragment_main_opt_icon_height"/>
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
            <FrameLayout
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:background="@drawable/rect_solid_8dp_alpha_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_main_div_content_height"
                android:layout_marginLeft="@dimen/fragment_main_div_content_margin_left"
                android:layout_marginRight="@dimen/fragment_main_div_content_margin_right"
                android:layout_marginTop="@dimen/fragment_main_div_content_margin_top">
                <androidx.leanback.widget.HorizontalGridView
                    android:id="@+id/horizontal_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <androidx.leanback.widget.VerticalGridView
                    android:id="@+id/vertical_content"
                    app:focusOutFront="true"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:clipToOutline="false"
                    android:padding="@dimen/fragment_main_vertical_content_padding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>