<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2000000">


    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.hjq.shape.layout.ShapeRelativeLayout
            app:shape="oval"
            app:shape_solidColor="#262626"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/qb_px_10">

            <ImageView
                android:layout_width="@dimen/qb_px_40"
                android:layout_height="@dimen/qb_px_40"
                android:src="@drawable/icon_nowifi_normal"

                />
        </com.hjq.shape.layout.ShapeRelativeLayout>

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please check your network settings."
            android:textStyle="bold"
            android:textSize="@dimen/qb_px_16"
            android:layout_marginBottom="@dimen/qb_px_20"
            android:layout_marginTop="@dimen/qb_px_20"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.hjq.shape.view.ShapeTextView
                android:nextFocusDown="@id/tv_ok"
                android:nextFocusForward="@id/tv_ok"
                android:nextFocusLeft="@id/tv_ok"
                android:nextFocusRight="@id/tv_ok"
                android:nextFocusUp="@id/tv_ok"
                android:id="@+id/tv_cancle"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:shape_radius="@dimen/qb_px_10"
                android:gravity="center"
                app:shape_textColor="@color/white"
                app:shape_textFocusedColor="@color/black"
                app:shape_solidColor="#262626"
                app:shape_solidFocusedColor="@color/white"
                android:layout_marginRight="25dp"
                android:layout_width="@dimen/qb_px_240"
                android:layout_height="@dimen/qb_px_40"
                android:text="Cancle"
                />

            <com.hjq.shape.view.ShapeTextView
                android:nextFocusDown="@id/tv_cancle"
                android:nextFocusForward="@id/tv_cancle"
                android:nextFocusLeft="@id/tv_cancle"
                android:nextFocusRight="@id/tv_cancle"
                android:nextFocusUp="@id/tv_cancle"
                android:id="@+id/tv_ok"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:shape_radius="@dimen/qb_px_10"
                android:gravity="center"
                app:shape_textColor="@color/white"
                app:shape_textFocusedColor="@color/black"
                app:shape_solidColor="#262626"
                app:shape_solidFocusedColor="@color/white"
                android:layout_width="@dimen/qb_px_240"
                android:layout_height="@dimen/qb_px_40"
                android:text="OK"
                />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

</layout>