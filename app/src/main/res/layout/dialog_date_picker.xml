<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/root"
        app:cardCornerRadius="@dimen/card_elevation"
        app:cardBackgroundColor="@color/transparent"
        app:cardElevation="@dimen/card_elevation"
        android:layout_gravity="center"
        android:layout_width="@dimen/dialog_date_picker_root_width"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/bg_dialog"
            android:id="@+id/blur"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/date_picker"
                android:textSize="@dimen/dialog_app_title_text_size"
                android:visibility="gone"
                android:textColor="@color/text_color_style_1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_app_title_height"
                android:background="@color/solid_style_4"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:paddingRight="@dimen/dialog_date_picker_content_padding_right"
                android:layout_marginTop="@dimen/dialog_app_margin_top"
                android:layout_marginBottom="@dimen/dialog_app_margin_bottom"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/year"
                        android:textSize="@dimen/dialog_date_picker_text_text_size"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textColor="@color/text_color_style_1"
                        android:layout_width="@dimen/dialog_date_picker_text_text_width"
                        android:layout_height="wrap_content"/>
                    <androidx.leanback.widget.HorizontalGridView
                        android:id="@+id/year"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/month"
                        android:textSize="@dimen/dialog_date_picker_text_text_size"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textColor="@color/text_color_style_1"
                        android:layout_width="@dimen/dialog_date_picker_text_text_width"
                        android:layout_height="wrap_content"/>
                    <androidx.leanback.widget.HorizontalGridView
                        android:id="@+id/month"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/day"
                        android:textSize="@dimen/dialog_date_picker_text_text_size"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textColor="@color/text_color_style_1"
                        android:layout_width="@dimen/dialog_date_picker_text_text_width"
                        android:layout_height="wrap_content"/>
                    <androidx.leanback.widget.HorizontalGridView
                        android:id="@+id/day"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="@dimen/qb_px_5"
                android:layout_height="@dimen/qb_px_33">
                <TextView
                    android:id="@+id/cancel"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true"
                    android:text="@string/cancel"
                    android:textSize="@dimen/qb_px_sp_12"
                    android:background="@drawable/ripple_style_3"
                    android:textColor="@color/text_color_style_1"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/confirm"
                    android:text="@string/confirm"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true"
                    android:textSize="@dimen/qb_px_sp_12"
                    android:background="@drawable/ripple_style_3"
                    android:textColor="@color/text_color_style_1"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</FrameLayout>