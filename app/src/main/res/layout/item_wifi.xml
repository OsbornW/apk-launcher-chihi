<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="m"
            type="com.chihihx.launcher.bean.WifiNetwork" />
    </data>
    <com.hjq.shape.layout.ShapeRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/qb_px_12"
        android:paddingVertical="@dimen/qb_px_10"
        app:shape_radius="@dimen/qb_px_8"
        app:shape_solidFocusedColor="@color/red"
        android:focusableInTouchMode="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/ivConnectedIcon"
            android:layout_width="@dimen/qb_px_20"
            android:layout_height="@dimen/qb_px_20"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_wifi_100" />

        <LinearLayout
            android:id="@+id/llConnectedInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/ivConnectedIcon"
            android:layout_marginStart="@dimen/qb_px_12"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvConnectedWiFiName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wifi名字"
                android:textColor="@color/white"
                android:textSize="@dimen/qb_px_sp_14" />

            <TextView
                android:id="@+id/tvConnectedStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已连接"
                android:textColor="@color/white"
                android:textSize="@dimen/qb_px_sp_12" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivLockIcon"
            android:layout_width="@dimen/qb_px_20"
            android:layout_height="@dimen/qb_px_20"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_lock_100" />
    </com.hjq.shape.layout.ShapeRelativeLayout>
</layout>
