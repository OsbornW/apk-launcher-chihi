<?xml version="1.0" encoding="utf-8"?>
<com.soya.launcher.view.MyFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/ripple_style_2"
    android:paddingLeft="@dimen/qb_px_10"
    android:paddingRight="@dimen/qb_px_10"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:layout_width="@dimen/qb_px_200"
    android:layout_height="@dimen/qb_px_36">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/icon"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_settings_100"
            android:layout_width="@dimen/qb_px_16"
            android:layout_height="@dimen/qb_px_16"/>
        <TextView
            android:id="@+id/title"
            android:textSize="@dimen/qb_px_sp_10"
            android:textColor="@color/text_color_style_1"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:lines="1"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/action"
            android:gravity="center"
            android:textSize="@dimen/qb_px_sp_8"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/qb_px_53"
            android:layout_height="@dimen/qb_px_20"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.soya.launcher.view.MyFrameLayout>