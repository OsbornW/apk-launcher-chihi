<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="m"
            type="com.chihihx.launcher.bean.Data" />
    </data>
<com.chihihx.launcher.view.MyFrameLayoutHouse
    android:layout_marginHorizontal="@dimen/qb_px_10"
    android:layout_marginTop="@dimen/qb_px_13"
    android:layout_marginBottom="@dimen/qb_px_13"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToOutline="false"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <com.chihihx.launcher.view.MyFrameLayoutHouse
        item_home_content_focus="@{m}"
        android:nextFocusUp="@id/header"
        android:id="@+id/fl_root"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:foreground="@drawable/bg_app"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:clipToOutline="false"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.chihihx.launcher.view.MyCardView
            app:cardCornerRadius="@dimen/qb_px_5"
            app:cardBackgroundColor="@color/solid_style_2"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="@dimen/qb_px_130"
                android:layout_height="@dimen/qb_px_220"
                android:id="@+id/fl_ad"/>

            <TextView
                android:id="@+id/tv_loadding"
                item_home_content_loading="@{m}"
                android:text="@string/loading"
                android:layout_gravity="center"
                android:textSize="@dimen/qb_px_sp_11"
                android:textColor="@color/text_color_style_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                item_home_content_img="@{m}"
                android:id="@+id/image"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/qb_px_130"
                android:layout_height="@dimen/qb_px_220"/>
        </com.chihihx.launcher.view.MyCardView>
    </com.chihihx.launcher.view.MyFrameLayoutHouse>
</com.chihihx.launcher.view.MyFrameLayoutHouse>

</layout>