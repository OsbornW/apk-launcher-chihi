<?xml version="1.0" encoding="utf-8"?>
<com.soya.launcher.view.MyFrameLayoutHouse
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="@dimen/qb_px_60"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.soya.launcher.view.MyCardView
        app:cardCornerRadius="@dimen/qb_px_8"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/solid_style_3"
        android:layout_gravity="center"
        android:layout_width="@dimen/qb_px_160"
        android:layout_height="@dimen/qb_px_160">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/image"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_wifi_100"
                    android:scaleType="centerCrop"
                    android:layout_width="@dimen/qb_px_70"
                    android:layout_height="@dimen/qb_px_70"/>
            </FrameLayout>
            <TextView
                android:id="@+id/title"
                android:text="WIFI"
                android:textSize="@dimen/qb_px_sp_15"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:textColor="@color/text_selector_color_1"
                android:background="@drawable/light_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_50"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.soya.launcher.view.MyCardView>
</com.soya.launcher.view.MyFrameLayoutHouse>