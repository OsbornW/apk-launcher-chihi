<?xml version="1.0" encoding="utf-8"?>
<com.soya.launcher.view.MyFrameLayoutHouse
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:clipToOutline="false"
    android:layout_marginVertical="@dimen/qb_px_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/rl_root"
        android:foreground="@drawable/bg_app"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:clipToOutline="false"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.soya.launcher.view.MyCardView
            app:cardCornerRadius="@dimen/qb_px_5"
            app:cardBackgroundColor="@color/solid_style_2"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/loading"
                android:layout_gravity="center"
                android:textColor="@color/text_color_style_1"
                android:textSize="@dimen/qb_px_sp_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/image"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/qb_px_200"
                android:layout_height="@dimen/qb_px_100"/>
        </com.soya.launcher.view.MyCardView>
    </FrameLayout>
</com.soya.launcher.view.MyFrameLayoutHouse>