<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:background="@drawable/bg_dialog"
        android:id="@+id/root"
        app:cardCornerRadius="@dimen/qb_px_8"
        app:cardBackgroundColor="@color/transparent"
        app:cardElevation="@dimen/qb_px_8"
        android:layout_gravity="center"
        android:layout_width="@dimen/qb_px_450"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/bg_dialog"
            android:id="@+id/blur"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="gone"
                android:text="@string/time_picker"
                android:textSize="@dimen/qb_px_sp_25"
                android:textColor="@color/text_color_style_1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_45"
                android:background="@color/solid_style_4"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:paddingRight="@dimen/qb_px_16"
                android:layout_marginTop="@dimen/qb_px_26"
                android:layout_marginBottom="@dimen/qb_px_26"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/hour"
                        android:textSize="@dimen/qb_px_sp_16"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textColor="@color/text_color_style_1"
                        android:layout_width="@dimen/qb_px_100"
                        android:layout_height="wrap_content"/>
                    <androidx.leanback.widget.HorizontalGridView
                        android:id="@+id/hour"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/minute"
                        android:textSize="@dimen/qb_px_sp_16"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textColor="@color/text_color_style_1"
                        android:layout_width="@dimen/qb_px_100"
                        android:layout_height="wrap_content"/>
                    <androidx.leanback.widget.HorizontalGridView
                        android:id="@+id/minute"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/second"
                        android:textSize="@dimen/qb_px_sp_16"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textColor="@color/text_color_style_1"
                        android:layout_width="@dimen/qb_px_100"
                        android:layout_height="wrap_content"/>
                    <androidx.leanback.widget.HorizontalGridView
                        android:id="@+id/second"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="@dimen/qb_px_8"
                android:layout_height="@dimen/qb_px_50">
                <TextView
                    android:id="@+id/cancel"
                    android:focusable="true"
                    android:clickable="true"
                    android:text="@string/cancel"
                    android:textSize="@dimen/qb_px_sp_16"
                    android:background="@drawable/ripple_style_3"
                    android:textColor="@color/text_color_style_1"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/confirm"
                    android:text="@string/confirm"
                    android:focusable="true"
                    android:clickable="true"
                    android:textSize="@dimen/qb_px_sp_16"
                    android:background="@drawable/ripple_style_3"
                    android:textColor="@color/text_color_style_1"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</FrameLayout>