<?xml version="1.0" encoding="utf-8"?>
<layout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToOutline="false"
    android:clipToPadding="false"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.hjq.shape.layout.ShapeConstraintLayout
        app:shape_solidColor="@color/transparent"
        app:shape_radius="@dimen/qb_px_8"
        android:id="@+id/root"
        app:cardUseCompatPadding="false"
        app:cardElevation="@dimen/qb_px_8"
        android:layout_gravity="center"
        android:layout_width="@dimen/qb_px_450"
        android:layout_height="wrap_content">
        <org.raphets.roundimageview.RoundImageView
            app:border_color="@color/transparent"
            app:type="round"
            app:corner_radius="@dimen/qb_px_8"
            android:id="@+id/blur"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/time_zone"
                android:textSize="@dimen/qb_px_sp_25"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_50"/>
            <androidx.leanback.widget.VerticalGridView
                android:id="@+id/content"
                android:layout_gravity="center"
                android:clipToOutline="false"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:focusOutFront="true"
                app:focusOutEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/qb_px_250"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.hjq.shape.layout.ShapeConstraintLayout>
</FrameLayout>
</layout>