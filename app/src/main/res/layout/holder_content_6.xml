<?xml version="1.0" encoding="utf-8"?>
<com.soya.launcher.view.MyFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_gravity="center"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:clipToOutline="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_marginLeft="@dimen/holder_content_4_root_margin_left"
        android:layout_marginRight="@dimen/holder_content_4_root_margin_right"
        android:layout_marginTop="@dimen/qb_px_25"
        android:layout_marginBottom="@dimen/holder_content_4_root_margin_bottom"
        android:foreground="@drawable/bg_app"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:clipToOutline="false"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.soya.launcher.view.MyCardView
            app:cardCornerRadius="@dimen/holder_content_4_root_radius"
            app:cardBackgroundColor="@color/solid_style_2"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_loadding"
                android:text="@string/loading"
                android:layout_gravity="center"
                android:textColor="@color/text_color_style_1"
                android:textSize="@dimen/holder_content_loading_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/image"
                android:scaleType="fitXY"
                android:layout_width="@dimen/qb_px_205"
                android:layout_height="@dimen/qb_px_180"/>
            <TextView
                android:textColor="@color/white"
                android:textSize="@dimen/qb_px_18"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="拳皇"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/qb_px_8"
                />

        </com.soya.launcher.view.MyCardView>
    </FrameLayout>
</com.soya.launcher.view.MyFrameLayout>