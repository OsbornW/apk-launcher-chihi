<?xml version="1.0" encoding="utf-8"?>
<layout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.hjq.shape.layout.ShapeRelativeLayout
        app:shape_solidColor="@color/transparent"
        app:shape_radius="@dimen/qb_px_8"
        android:id="@+id/root"
        android:layout_gravity="center"
        android:layout_width="@dimen/qb_px_320"
        android:layout_height="@dimen/qb_px_170">
        <org.raphets.roundimageview.RoundImageView
            app:border_color="@color/transparent"
            app:type="round"
            app:corner_radius="@dimen/qb_px_8"
            android:id="@+id/blur"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.hjq.shape.layout.ShapeLinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_170">
            <TextView
                android:visibility="gone"
                android:text="@string/operate"
                android:textSize="@dimen/qb_px_sp_16"
                android:textColor="@color/text_color_style_2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_40"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/qb_px_23"
                android:layout_marginBottom="@dimen/qb_px_20"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="@dimen/qb_px_20"
                    android:layout_gravity="center_vertical"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/qb_px_5"
                    app:cardBackgroundColor="@color/transparent"
                    android:layout_width="@dimen/qb_px_56"
                    android:layout_height="@dimen/qb_px_56">
                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginLeft="@dimen/qb_px_20"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/name"
                        android:ellipsize="end"
                        android:textSize="@dimen/qb_px_sp_14"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:textColor="@color/text_color_style_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="@string/version"
                            android:textSize="@dimen/qb_px_sp_15"
                            android:textColor="@color/text_color_style_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/version"
                            android:textSize="@dimen/qb_px_sp_15"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/text_color_style_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="@dimen/qb_px_5"
                android:layout_marginTop="@dimen/qb_px_13"
                android:layout_height="@dimen/qb_px_53">
                <com.hjq.shape.view.ShapeTextView
                    android:id="@+id/close"
                    android:text="@string/close"
                    android:textSize="@dimen/qb_px_sp_15"
                    app:shape_solidFocusedColor="#80625356"
                    app:shape_radius="@dimen/qb_px_8"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:textColor="@color/text_color_style_1"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <com.hjq.shape.view.ShapeTextView
                    app:shape_solidFocusedColor="#80625356"
                    app:shape_radius="@dimen/qb_px_8"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:id="@+id/delete"
                    android:text="@string/uninstall"
                    android:textSize="@dimen/qb_px_sp_15"
                    android:textColor="@color/text_color_style_1"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <com.hjq.shape.view.ShapeTextView
                    android:id="@+id/open"
                    android:text="@string/open"
                    android:textSize="@dimen/qb_px_sp_15"
                    app:shape_solidFocusedColor="#80625356"
                    app:shape_radius="@dimen/qb_px_8"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:textColor="@color/text_color_style_1"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.hjq.shape.layout.ShapeLinearLayout>
    </com.hjq.shape.layout.ShapeRelativeLayout>
</FrameLayout>
</layout>