<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:background="@drawable/bg_dialog"
        android:id="@+id/root"
        app:cardElevation="@dimen/card_elevation"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="@dimen/dialog_app_card_corner_radius"
        app:cardBackgroundColor="@color/transparent"
        android:layout_gravity="center"
        android:layout_width="@dimen/dialog_app_carld_layout_width"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/bg_dialog"
            android:id="@+id/blur"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="gone"
                android:text="@string/operate"
                android:textSize="@dimen/dialog_app_title_text_size"
                android:textColor="@color/text_color_style_2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_app_title_height"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/dialog_app_margin_top"
                android:layout_marginBottom="@dimen/dialog_app_margin_bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="@dimen/dialog_app_margin_left"
                    android:layout_gravity="center_vertical"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/dialog_app_card_corner_radius"
                    app:cardBackgroundColor="@color/transparent"
                    android:layout_width="@dimen/dialog_app_card_icon_width"
                    android:layout_height="@dimen/dialog_app_card_icon_height">
                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginLeft="@dimen/dialog_app_margin_left"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/name"
                        android:ellipsize="end"
                        android:textSize="@dimen/dialog_app_name_text_size"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:textColor="@color/text_color_style_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="@string/version"
                            android:textSize="@dimen/dialog_app_version_text_size"
                            android:textColor="@color/text_color_style_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/version"
                            android:textSize="@dimen/dialog_app_version_text_size"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/text_color_style_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="@dimen/dialog_app_opt_padding"
                android:layout_height="@dimen/dialog_app_opt_height">
                <TextView
                    android:id="@+id/close"
                    android:text="@string/close"
                    android:textSize="@dimen/dialog_app_opt_text_size"
                    android:background="@drawable/ripple_style_3"
                    android:textColor="@color/text_color_style_1"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/delete"
                    android:text="@string/uninstall"
                    android:textSize="@dimen/dialog_app_opt_text_size"
                    android:background="@drawable/ripple_style_3"
                    android:textColor="@color/text_color_style_1"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/open"
                    android:text="@string/open"
                    android:textSize="@dimen/dialog_app_opt_text_size"
                    android:background="@drawable/ripple_style_3"
                    android:textColor="@color/text_color_style_1"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</FrameLayout>