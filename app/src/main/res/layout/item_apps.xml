<?xml version="1.0" encoding="utf-8"?>
<com.chihihx.launcher.view.AppLayoutHouse xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.chihihx.launcher.view.AppLayoutHouse xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fl_focus"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_gravity="center_horizontal">

        <com.chihihx.launcher.view.MyCardView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/qb_px_20"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="@dimen/qb_px_5"
            app:cardElevation="0dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="@dimen/qb_px_180"
                    android:layout_height="@dimen/qb_px_106"
                    android:background="@color/solid_style_10">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/image_small"
                        android:layout_width="@dimen/qb_px_60"
                        android:layout_height="@dimen/qb_px_60"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_46"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/light_item"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/qb_px_15"
                        android:paddingRight="@dimen/qb_px_15"
                        android:text="Google play"
                        android:textColor="@color/text_selector_color_1"
                        android:textSize="@dimen/qb_px_sp_15" />
                </FrameLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.chihihx.launcher.view.MyCardView>
    </com.chihihx.launcher.view.AppLayoutHouse>
</com.chihihx.launcher.view.AppLayoutHouse>