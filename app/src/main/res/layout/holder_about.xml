<?xml version="1.0" encoding="utf-8"?>
<com.soya.launcher.view.MyFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:shape_solidColor="@color/transparent"
    app:shape_solidFocusedColor="#80625356"
    app:shape_radius="@dimen/qb_px_8"
    android:paddingLeft="@dimen/qb_px_10"
    android:paddingRight="@dimen/qb_px_10"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:layout_width="@dimen/qb_px_350"
    android:layout_height="@dimen/qb_px_56">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/icon"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_settings_100"
            android:layout_width="@dimen/qb_px_20"
            android:layout_height="@dimen/qb_px_20"/>
        <TextView
            android:id="@+id/title"
            android:textSize="@dimen/qb_px_sp_15"
            android:textColor="@color/text_color_style_1"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="@dimen/qb_px_0"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/desc"
            android:textSize="@dimen/qb_px_sp_14"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.soya.launcher.view.MyFrameLayout>