<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="m"
            type="com.chihihx.launcher.bean.AboutItem" />
    </data>
<com.chihihx.launcher.view.MyFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="@dimen/qb_px_8"
    android:focusableInTouchMode="true"
    app:shape_solidColor="@color/transparent"
    app:shape_solidFocusedColor="#80625356"
    app:shape_radius="@dimen/qb_px_8"
    android:paddingLeft="@dimen/qb_px_10"
    android:paddingRight="@dimen/qb_px_10"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:layout_width="@dimen/qb_px_400"
    android:layout_height="@dimen/qb_px_48">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            item_about_icon="@{m}"
            android:id="@+id/icon"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_settings_100"
            android:layout_width="@dimen/qb_px_20"
            android:layout_height="@dimen/qb_px_20"/>
        <TextView
            item_about_title="@{m}"
            android:id="@+id/title"
            android:textSize="@dimen/qb_px_sp_15"
            android:textColor="@color/text_color_style_1"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="@dimen/qb_px_0"
            android:layout_height="wrap_content"/>
        <TextView
            item_about_desc="@{m}"
            android:id="@+id/desc"
            android:textSize="@dimen/qb_px_sp_14"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.chihihx.launcher.view.MyFrameLayout>
</layout>