<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">
    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/wallpaper"
            android:src="@drawable/wallpaper_1"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:paddingRight="@dimen/qb_px_10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include layout="@layout/include_title"/>
                <ImageView
                    android:id="@+id/wifi"
                    android:layout_gravity="center_vertical|right"
                    android:clickable="true"
                    android:foreground="@drawable/ripple_style_1"
                    android:src="@drawable/baseline_wifi_100"
                    android:layout_marginLeft="@dimen/qb_px_6"
                    android:padding="@dimen/qb_px_4"
                    android:layout_width="@dimen/qb_px_26"
                    android:layout_height="@dimen/qb_px_26"/>
            </FrameLayout>
            <TextView
                android:id="@+id/tip"
                android:textSize="@dimen/qb_px_sp_12"
                android:layout_marginLeft="@dimen/qb_px_17"
                android:textColor="@color/text_color_style_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/mes"
                            android:textSize="@dimen/qb_px_sp_12"
                            android:textColor="@color/text_color_style_1"
                            android:layout_gravity="left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/qb_px_8"
                            android:max="100"
                            android:layout_width="@dimen/qb_px_266"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/div_oper"
                    android:visibility="gone"
                    android:layout_gravity="center|bottom"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="26dp"
                    android:padding="@dimen/qb_px_5"
                    android:layout_height="@dimen/qb_px_33">
                    <TextView
                        android:id="@+id/close"
                        android:focusable="true"
                        android:clickable="true"
                        android:text="@string/close"
                        android:textSize="@dimen/qb_px_sp_12"
                        android:textStyle="bold"
                        android:foreground="@drawable/ripple_style_4"
                        android:layout_marginLeft="@dimen/qb_px_5"
                        android:layout_marginRight="@dimen/qb_px_5"
                        android:gravity="center"
                        android:minWidth="@dimen/qb_px_100"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/retry"
                        android:text="@string/retry"
                        android:focusable="true"
                        android:clickable="true"
                        android:textSize="@dimen/qb_px_sp_12"
                        android:textStyle="bold"
                        android:foreground="@drawable/ripple_style_4"
                        android:layout_marginLeft="@dimen/qb_px_5"
                        android:layout_marginRight="@dimen/qb_px_5"
                        android:gravity="center"
                        android:minWidth="@dimen/qb_px_100"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/install"
                        android:textColor="@color/text_color_style_1"
                        android:text="@string/install"
                        android:focusable="true"
                        android:clickable="true"
                        android:textSize="@dimen/qb_px_sp_12"
                        android:textStyle="bold"
                        android:foreground="@drawable/ripple_style_4"
                        android:gravity="center"
                        android:minWidth="@dimen/qb_px_100"
                        android:layout_marginLeft="@dimen/qb_px_5"
                        android:layout_marginRight="@dimen/qb_px_5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</com.google.android.material.appbar.AppBarLayout>