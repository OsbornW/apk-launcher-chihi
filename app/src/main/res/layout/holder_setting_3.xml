<?xml version="1.0" encoding="utf-8"?>
<com.soya.launcher.view.MyFrameLayoutHouse
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/qb_px_40"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.soya.launcher.view.RelativeLayoutHouse
        android:nextFocusUp="@id/header"
        android:id="@+id/rl_root"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center"
        android:focusableInTouchMode="true"
        android:layout_width="@dimen/qb_px_180"
        android:layout_height="@dimen/qb_px_160">

        <com.soya.launcher.view.MyCardView
            android:id="@+id/cardview"
            app:cardCornerRadius="@dimen/qb_px_5"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/solid_style_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <ImageView
                        android:id="@+id/image"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_wifi_100"
                        android:scaleType="centerCrop"
                        android:layout_width="@dimen/qb_px_100"
                        android:layout_height="@dimen/qb_px_100"/>
                </FrameLayout>
                <TextView
                    android:paddingHorizontal="@dimen/qb_px_10"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:id="@+id/title"
                    android:text="WIFI"
                    android:textSize="@dimen/qb_px_sp_15"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:textColor="@color/text_selector_color_1"
                    android:background="@drawable/light_item"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_50"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.soya.launcher.view.MyCardView>

    </com.soya.launcher.view.RelativeLayoutHouse>

</com.soya.launcher.view.MyFrameLayoutHouse>