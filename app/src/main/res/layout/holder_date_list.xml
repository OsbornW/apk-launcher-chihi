<?xml version="1.0" encoding="utf-8"?>
<com.soya.launcher.view.MyFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/ripple_style_2"
    android:paddingLeft="@dimen/holder_language_root_padding_left"
    android:paddingRight="@dimen/holder_language_root_padding_right"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:layout_width="@dimen/holder_language_root_width"
    android:layout_height="@dimen/holder_language_root_height">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_gravity="center_vertical"
            android:background="@drawable/oval_solid_1"
            android:layout_width="@dimen/holder_date_list_point_width"
            android:layout_height="@dimen/holder_date_list_point_height"/>
        <TextView
            android:id="@+id/title"
            android:textSize="@dimen/holder_language_title_text_size"
            android:textColor="@color/text_enable_style_1"
            android:layout_marginLeft="@dimen/holder_language_title_margin_left"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/desc"
                android:textSize="@dimen/holder_language_desc_text_size"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Switch
                android:id="@+id/switch_item"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.soya.launcher.view.MyFrameLayout>