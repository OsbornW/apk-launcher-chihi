<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:background="@drawable/bg_dialog"
        android:id="@+id/root"
        app:cardElevation="@dimen/card_elevation"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="@dimen/dialog_app_card_corner_radius"
        app:cardBackgroundColor="@color/transparent"
        android:layout_gravity="center"
        android:layout_width="@dimen/dialog_app_carld_layout_width"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/bg_dialog"
            android:id="@+id/blur"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/msg"
                android:gravity="center"
                android:text="@string/uninstalling"
                android:textColor="@color/text_color_style_1"
                android:textSize="@dimen/dialog_uninstall_text_size"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_uninstall_height"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="@dimen/qb_px_5"
                android:layout_height="@dimen/qb_px_33">
                <TextView
                    android:id="@+id/opt"
                    android:text="@string/waiting"
                    android:textSize="@dimen/qb_px_sp_12"
                    android:background="@drawable/ripple_style_3"
                    android:textColor="@color/text_color_style_1"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</FrameLayout>