<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:focusable="true"
    app:shape_solidFocusedColor="#EAE9E9"
    android:id="@+id/ll_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/qb_px_16"
    android:paddingVertical="@dimen/qb_px_8">

    <!-- App Icon -->
    <org.raphets.roundimageview.RoundImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_app_icon"
        app:corner_radius="@dimen/qb_px_8"
        app:type="round"
        android:layout_width="@dimen/qb_px_40"
        android:layout_height="@dimen/qb_px_40"
        android:src="@drawable/ic_launcher_foreground"
         />

    <!-- App Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钉钉 - 让进步发生"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_version_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.2--->1.3"
            android:textSize="12sp"
            android:textColor="#666" />

        <TextView
            android:id="@+id/tv_app_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024年7月23日"
            android:textSize="12sp"
            android:textColor="#666" />
    </LinearLayout>

    <com.soya.launcher.view.FlikerProgressBar
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/qb_px_60"
        android:layout_height="@dimen/qb_px_25"
        app:radius="@dimen/qb_px_12"
        android:id="@+id/pb_update"
        app:defaultText="更新"
        app:bgcolor="#F2F2F7"
        app:borderWidth="@dimen/qb_px_1"
        app:textColor="#669966"
        app:progressColor="#669966"
        />

</com.hjq.shape.layout.ShapeLinearLayout>
