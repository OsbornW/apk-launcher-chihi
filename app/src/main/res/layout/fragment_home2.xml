<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.Home2Fragment">

    <com.soya.launcher.desktop.view.CustomToolbarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        />

    <androidx.leanback.widget.HorizontalGridView
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_180"
        android:id="@+id/rv_apps"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingTop="@dimen/qb_px_15"
        android:paddingHorizontal="@dimen/qb_px_30"
        />

    <RelativeLayout
        android:id="@+id/fl_list"
        android:background="@drawable/rect_solid_8dp_alpha_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/qb_px_10"
        android:layout_marginRight="@dimen/qb_px_10"
        android:layout_marginVertical="@dimen/qb_px_10">
        <TextView
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="敬请期待~"/>
    </RelativeLayout>

</LinearLayout>
</layout>