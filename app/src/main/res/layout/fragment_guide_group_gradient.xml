<?xml version="1.0" encoding="utf-8"?>
<layout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:clipToOutline="false"
    android:clipChildren="false"
    android:id="@+id/root"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.soya.launcher.view.SimpleGradientView
        android:id="@+id/lt"
        android:layout_gravity="left|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.soya.launcher.view.SimpleGradientView
        android:id="@+id/rt"
        android:rotation="90"
        android:layout_gravity="right|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.soya.launcher.view.SimpleGradientView
        android:id="@+id/lb"
        android:rotation="270"
        android:layout_gravity="left|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.soya.launcher.view.SimpleGradientView
        android:id="@+id/rb"
        android:rotation="180"
        android:layout_gravity="right|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/content"
            android:background="@drawable/menu_item_3"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="@dimen/qb_px_400"
            android:layout_height="@dimen/qb_px_225">
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/transparent"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/qb_px_5"
                android:layout_margin="@dimen/qb_px_6"
                app:cardUseCompatPadding="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/screen_home"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <TextView
            app:layout_constraintBottom_toTopOf="@id/content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/skip_tip"
            android:text="@string/guide_group_gradient_tip_next"
            android:textColor="@color/text_color_style_1"
            android:layout_marginBottom="@dimen/qb_px_36"
            android:lineSpacingExtra="5dp"
            android:gravity="center"
            android:maxWidth="@dimen/qb_px_490"
            android:textSize="@dimen/qb_px_sp_17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:layout_marginTop="@dimen/qb_px_26"
            app:layout_constraintTop_toBottomOf="@id/content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="@dimen/qb_px_380"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/manual"
                android:textSize="@dimen/qb_px_sp_18"
                android:textColor="@color/text_color_style_1"
                android:layout_gravity="left|center_vertical"
                android:text="@string/manual_text"
                android:textStyle="bold"
                android:gravity="center"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/ripple_style_3"
                android:layout_width="@dimen/qb_px_130"
                android:layout_height="@dimen/qb_px_45"/>
            <TextView
                android:id="@+id/skip"
                android:textSize="@dimen/qb_px_sp_18"
                android:textColor="@color/text_color_style_1"
                android:layout_gravity="right|center_vertical"
                android:text="@string/next"
                android:textStyle="bold"
                android:gravity="center"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/ripple_style_3"
                android:layout_width="@dimen/qb_px_130"
                android:layout_height="@dimen/qb_px_45"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>
</layout>