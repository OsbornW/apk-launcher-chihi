<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:clipToOutline="false"
    android:clipChildren="false"
    android:id="@+id/root"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/wallpaper"
        android:src="@drawable/wallpaper_1"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.soya.launcher.view.SimpleGradientView
        android:id="@+id/lt"
        android:layout_gravity="left|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.soya.launcher.view.SimpleGradientView
        android:id="@+id/rt"
        android:rotation="90"
        android:layout_gravity="right|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.soya.launcher.view.SimpleGradientView
        android:id="@+id/lb"
        android:rotation="270"
        android:layout_gravity="left|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.soya.launcher.view.SimpleGradientView
        android:id="@+id/rb"
        android:rotation="180"
        android:layout_gravity="right|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/content"
            android:background="@drawable/menu_item_3"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="@dimen/fragment_gradient_screen_width"
            android:layout_height="@dimen/fragment_gradient_screen_height">
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/transparent"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/fragment_gradient_content_radius"
                android:layout_margin="@dimen/fragment_gradient_content_margin"
                app:cardUseCompatPadding="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/screen_home"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <TextView
            app:layout_constraintBottom_toTopOf="@id/content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/skip_tip"
            android:text="@string/guide_group_gradient_tip_next"
            android:textColor="@color/text_color_style_1"
            android:layout_marginBottom="@dimen/fragment_guide_group_gradient_text_tip_margin_bottom"
            android:lineSpacingExtra="5dp"
            android:gravity="center"
            android:maxWidth="@dimen/fragment_guide_group_gradient_text_max_width"
            android:textSize="@dimen/fragment_guide_group_gradient_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:layout_marginTop="@dimen/fragment_guide_group_gradient_div_opt_margin_top"
            app:layout_constraintTop_toBottomOf="@id/content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="@dimen/fragment_guide_group_gradient_image_width"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/manual"
                android:textSize="@dimen/fragment_set_date_next_text_size"
                android:textColor="@color/text_color_style_1"
                android:layout_gravity="left|center_vertical"
                android:text="@string/manual_text"
                android:textStyle="bold"
                android:gravity="center"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/ripple_style_3"
                android:layout_width="@dimen/fragment_guide_group_gradient_button_width"
                android:layout_height="@dimen/fragment_set_date_next_height"/>
            <TextView
                android:id="@+id/skip"
                android:textSize="@dimen/fragment_set_date_next_text_size"
                android:textColor="@color/text_color_style_1"
                android:layout_gravity="right|center_vertical"
                android:text="@string/next"
                android:textStyle="bold"
                android:gravity="center"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/ripple_style_3"
                android:layout_width="@dimen/fragment_guide_group_gradient_button_width"
                android:layout_height="@dimen/fragment_set_date_next_height"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fl_container"
        />
</FrameLayout>