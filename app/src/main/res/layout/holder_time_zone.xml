<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="m"
            type="com.soya.launcher.bean.SimpleTimeZone" />
    </data>
<com.soya.launcher.view.MyFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:shape_solidColor="@color/transparent"
    app:shape_solidFocusedColor="#80625356"
    app:shape_radius="@dimen/qb_px_8"
    android:paddingLeft="@dimen/qb_px_10"
    android:paddingRight="@dimen/qb_px_10"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:layout_width="@dimen/qb_px_300"
    android:layout_height="@dimen/qb_px_46">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:layout_width="@dimen/qb_px_4"
            android:layout_height="@dimen/qb_px_4"/>
        <TextView
            item_timezone_name="@{m}"
            android:id="@+id/title"
            android:textSize="@dimen/qb_px_sp_15"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:layout_marginLeft="@dimen/qb_px_10"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                item_timezone_desc="@{m}"
                android:id="@+id/desc"
                android:textSize="@dimen/qb_px_sp_8"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/check"
                android:src="@drawable/baseline_check_100"
                android:layout_width="@dimen/qb_px_13"
                android:layout_height="@dimen/qb_px_13"/>
        </FrameLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.soya.launcher.view.MyFrameLayout>
</layout>