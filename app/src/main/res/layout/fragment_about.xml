<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/include_title"
            android:id="@+id/layout"/>

        <androidx.leanback.widget.VerticalGridView
            app:focusOutFront="true"
            app:focusOutEnd="true"
            android:layout_marginTop="@dimen/qb_px_50"
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>

    <com.hjq.shape.view.ShapeTextView
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/upgrade"
        android:layout_width="@dimen/qb_px_200"
        android:layout_height="@dimen/qb_px_45"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="@string/upgrade"
        android:textColor="@color/text_color_style_1"
        android:textSize="@dimen/qb_px_sp_18"
        app:shape_radius="@dimen/qb_px_100"
        android:layout_marginBottom="@dimen/qb_px_30"
        app:shape_solidFocusedColor="#80625356" />

</RelativeLayout>
</layout>