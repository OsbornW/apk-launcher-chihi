<?xml version="1.0" encoding="utf-8"?>
<com.soya.launcher.view.MyFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/holder_banner_root_padding_left"
    android:paddingRight="@dimen/holder_banner_root_padding_right">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center_vertical"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/solid_style_1"
            app:cardCornerRadius="@dimen/holder_banner_root_radius"
            app:cardUseCompatPadding="false"
            android:layout_width="@dimen/holder_banner_image_width"
            android:layout_height="@dimen/holder_banner_image_height">
            <ImageView
                android:id="@+id/banner"
                android:text="Ads"
                android:src="@drawable/ads"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginLeft="@dimen/holder_banner_title_margin_left"
            android:text="Ads for test"
            android:layout_gravity="center_vertical"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/holder_banner_title_text_size"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.soya.launcher.view.MyFrameLayout>