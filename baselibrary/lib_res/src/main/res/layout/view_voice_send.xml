<?xml version="1.0" encoding="utf-8"?>

<com.hjq.shape.layout.ShapeRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/qb_px_150"
    android:layout_height="@dimen/qb_px_150"
    app:shape_radius="@dimen/qb_px_16"
    app:shape_solidColor="@color/color_181818">

    <ImageView
        android:id="@+id/iv_tip"
        android:layout_width="@dimen/qb_px_70"
        android:layout_height="@dimen/qb_px_70"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/qb_px_14" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/qb_px_11"
        android:text="手指上划，取消发送"
        android:textColor="@color/white"
        android:textSize="@dimen/qb_px_13" />

</com.hjq.shape.layout.ShapeRelativeLayout>
