<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingVertical="@dimen/qb_px_2"
    app:shape="rectangle"
    app:shape_radius="@dimen/qb_px_20"
    app:shape_shadowColor="@color/color_20000000"
    app:shape_shadowOffsetX="@dimen/qb_px_8"
    app:shape_shadowOffsetY="@dimen/qb_px_8"
    app:shape_shadowSize="@dimen/qb_px_10"
    app:shape_solidColor="@color/color_white"
    app:shape_strokeColor="@color/color_EEF0F6"
    app:shape_strokeWidth="@dimen/qb_px_1"
    >

    <RelativeLayout
        android:layout_width="@dimen/qb_px_363"
        android:layout_height="@dimen/qb_px_84"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/qb_px_30">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/qb_px_16"
                tools:src="@drawable/icon_toast_success"
                />

            <TextView
                android:id="@android:id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="3"
                android:textColor="@color/color_FF323C"
                android:textSize="@dimen/qb_px_14"
                tools:text="操作完成Toast" />

        </LinearLayout>

    </RelativeLayout>


</com.hjq.shape.layout.ShapeLinearLayout>