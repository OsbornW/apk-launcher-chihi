<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_dialog"
    android:layout_width="@dimen/qb_px_290"
    android:layout_height="@dimen/qb_px_168"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/qb_px_20"
    app:shape_radius="@dimen/qb_px_16"
    app:shape_solidColor="@color/color_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="@dimen/qb_px_12">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/color_020A1A"
                android:textSize="@dimen/qb_px_15"
                tools:text="Are you sure to change the plan?" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/qb_px_32"
                android:layout_marginTop="@dimen/qb_px_8"
                android:gravity="center_horizontal"
                android:textColor="@color/color_888D9D"
                android:textSize="@dimen/qb_px_14"
                tools:text="Once you change the plan, the current completion record will be cleared."

                />

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/qb_px_20"
        android:orientation="horizontal">

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_cancle"
            android:layout_width="@dimen/qb_px_110"
            android:layout_height="@dimen/qb_px_44"
            android:layout_marginRight="@dimen/qb_px_15"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_585CE5"
            android:textSize="@dimen/qb_px_14"
            app:shape_radius="@dimen/qb_px_12"
            app:shape_solidColor="@color/color_F8F8FC"
            app:shape_strokeColor="@color/color_EEF0F6"
            app:shape_strokeWidth="@dimen/qb_px_1" />


        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_confirm"
            android:layout_width="@dimen/qb_px_0"
            android:layout_height="@dimen/qb_px_44"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_white"
            android:textSize="@dimen/qb_px_14"
            app:shape_radius="@dimen/qb_px_12"
            app:shape_solidColor="@color/color_585CE5"
            app:shape_strokeColor="@color/color_EEF0F6"
            app:shape_strokeWidth="@dimen/qb_px_1" />

    </LinearLayout>

</com.hjq.shape.layout.ShapeLinearLayout>